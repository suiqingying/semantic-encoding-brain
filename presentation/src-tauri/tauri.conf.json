{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Brain Slides",
  "version": "0.1.0",
  "identifier": "com.semantic.brain.slides",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Brain Slides",
        "width": 1366,
        "height": 768,
        "resizable": true,
        "fullscreen": true,
        "decorations": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico", "icons/icon.png"]
  }
}
